<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/main.css">
    <link href="https://fonts.googleapis.com/css2?family=Reenie+Beanie&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <div>
        <ul id="list">
            <% if (locals.data != null) { %>
                <% for (let i = 0; i < data.length; i++) { %>
                    <form action="/delete" method="post" class="delete-form" data-index="<%= i %>">
                        <li>
                            <a href="#" onclick="submitForm('<%= i %>'); return false;">
                                <h2><%= data[i].title %></h2>
                                <p><%= data[i].info %></p>
                                <input type="hidden" name="_id" value="<%= data[i]._id %>">
                            </a>
                        </li>
                    </form>
                <% } %>
            <% } %>
        </ul>
    </div>
        <div class="input-field">
            <form action="/submit" method="post" class="submit-form">
                <label for="title">title?</label>
                <input type="text" id="title" name="title" required>
                <label for="info"> write your note here</label>
                <input type="text" id="info" name="info" required>
                <input type="submit" value="add task" id="new-task-submit">
            </form>
        </div>
    </div>
    <% if(locals.data) {%>
<script>
  function submitForm(index) {
        const form = document.querySelector(`.delete-form[data-index="${index}"]`);
        form.submit();
    }
</script>
<% } %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>